@page
@model RapiTalleres.Pages.Citas.DetailsModel

@{
    ViewData["Title"] = "Detalle";
}

<h1>Informacion detallada de la Cita</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cita.TecnicoID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cita.Tecnico.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cita.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cita.Cliente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cita.Servicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cita.Servicio.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cita.Cliente.FechaCita)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cita.Cliente.FechaCita)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success table-btn" asp-page="./Edit" asp-route-id="@Model.Cita?.CitaID">
    <i class="bi bi-pencil-fill"></i>Editar</a> |
    <a asp-page="./Index"class="btn btn-secondary"><i class="bi bi-skip-backward-circle-fill"></i> Volver a la Lista</a>
</div>
