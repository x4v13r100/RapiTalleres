@page
@model RapiTalleres.Pages.Citas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cita.CitaID" />
            <div class="form-group">
                <label asp-for="Cita.TecnicoID" class="control-label"></label>
                <select asp-for="Cita.TecnicoID" class="form-control" asp-items="ViewBag.TecnicoID"></select>
                <span asp-validation-for="Cita.TecnicoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cita.ClienteID" class="control-label"></label>
                <select asp-for="Cita.ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                <span asp-validation-for="Cita.ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cita.ServicioID" class="control-label"></label>
                <select asp-for="Cita.ServicioID" class="form-control" asp-items="ViewBag.ServicioID"></select>
                <span asp-validation-for="Cita.ServicioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index"class="btn btn-secondary"><i class="bi bi-skip-backward-circle-fill"></i> Volver a la Lista</a>
</div>

